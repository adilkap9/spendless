<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spendless" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/peachy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sandy</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btMain">
        <item name="android:textSize">@dimen/btMain</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tvMain">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/tvMain</item>
    </style>

    <style name="tvGrey">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/tvGrey</item>
        <item name="android:textColor">#696969</item>
    </style>

    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="expenseItemAmount">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="expenseItemDate">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bigText">
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="smallText">
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/btnText</item>
        <item name="android:padding">@dimen/btnPadding</item>
        <item name="android:background">@drawable/shape_rectangle_pink</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_bg</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/peachy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sandy</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

</resources>